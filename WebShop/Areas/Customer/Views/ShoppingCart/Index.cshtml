@model Shop.Models.ViewModels.ShoppingCartVM

<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Shopping Cart
                    </h5>
                </div>

            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
            </div>
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>
                </div>
                <div class="col-md-10 offset-md-1">
                    <div class="row border-bottom pb-3">
                        @foreach(var item in Model.Items){
                        <div class="d-none d-lg-block col-lg-1 text-center py-2">
                            <img src="@item.Product.ImageUrl" class="rounded" width="100%" />
                        </div>
                        <div class="col-12 col-lg-6 pt-md-3">
                            <h5 class="text-uppercase text-secondary"><strong>@item.Product.Name</strong></h5>
                                <p><small>@item.Product.Description</small></p>
                        </div>
                        <div class="col-12  col-lg-5 text-center row">
                            <div class="col-3 text-md-right pt-2 pt-md-4">
                                <h6 class="fw-semibold">
                                        @item.Product.Price.ToString("c")
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.Count
                                </h6>
                            </div>
                            <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                <div class="w-75 btn-group" role="group">
                                        <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="IncrementProduct" asp-route-productId="@item.Product.Id" class="btn btn-outline-primary bg-gradient py-2">
                                       +
                                    </a> &nbsp;
                                        <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="DecrementProduct" asp-route-productId="@item.Product.Id" class="btn btn-outline-primary bg-gradient py-2">
                                       -
                                    </a>
                                </div>
                            </div>
                            <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                    <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="RemoveProduct" asp-route-productId="@item.Product.Id" class="btn btn-danger bg-gradient py-2 ">
                                    Удалить
                                </a>
                            </div>
                        </div>
                        }
                    </div>



                </div>
            </div>
            <div class="card-footer bg-white border-0">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4">
                            <li class="d-flex justify-content-between align-items-center">
                                <h5 class="text-dark fw-semibold text-uppercase"> @Model.OrderHeader.OrderTotal</h5>
                                <h4 class="text-dark fw-bolder">РР</h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a asp-controller="ShoppingCart" asp-action="Summary" class="btn btn-primary border-0 bg-gradient w-100 py-2">Перейти к покупке</a>
                    </div>
                </div>
            </div>
        </div>
</form>
