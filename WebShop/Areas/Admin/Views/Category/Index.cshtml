@model List<Category>
<partial name="_Notification" />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-md-6 text-end">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-action="Create">
                Create
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Category
                </th>
                <th></th>
            </tr>
        </thead>
    
        @foreach(Category category in Model)
        {
            <tr>
                <td>
                    @category.Id
                </td>
                <td>
                    @category.DisplayOrder
                </td>
                <td>
                    @category.Name
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-outline-primary" asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                        <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
    
    </table>
</div>