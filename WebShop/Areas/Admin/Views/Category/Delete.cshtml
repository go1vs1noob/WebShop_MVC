@model Category
<div class="container">
    <form method="post">
        <div class="row">
            <label asp-for="Name" class="form-label"></label>
            <input disabled asp-for="Name" class="form-control " /> <!-- type="..." is not required with asp-for -->

        </div>
        <div class="row">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input disabled asp-for="DisplayOrder" class="form-control " />
        </div>
        <div class="row mt-2">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">
                    Delete
                </button>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category" asp-action="Index">
                    Cancel
                </a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}